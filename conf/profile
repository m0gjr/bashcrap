# ~/.profile: executed by Bourne-compatible login shells.

if [ "$(tty)" = "$SSH_TTY" ]
then
	if command -v tmux 2> /dev/null
	then
		TERM=linux
		if tmux ls
		then
			exec tmux attach
		else
			exec tmux new
		fi
	fi
fi

if [ "$BASH" ]; then
	if [ -f ~/.bashrc ]; then
		. ~/.bashrc
	fi
fi

mesg n 2> /dev/null || true

export PATH="$HOME/bin:$PATH"
