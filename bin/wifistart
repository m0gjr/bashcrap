#!/bin/bash

iface=${iface:-wlan0}
conffile=${1:-/etc/local/wifi.conf}

confnet(){
	printf "network={\n"

	printf "\tssid=\"$1\"\n"
	shift
	printf "\tpsk=\"$1\"\n"

	if [ -n "$freqs" ]
	then
		printf "freq_list=$freqs\n"
	fi

	printf "}\n\n"
}

confgen(){
	while read line
	do
		confnet $line
	done < <(grep -v '^\#\|^$' $conffile)
}

killall wpa_supplicant dhcpcd dhclient
rm /run/wpa_supplicant/* 2> /dev/null

ip a f dev $iface
wpa_supplicant -Bs -i $iface -D nl80211 -c <(confgen)
dhcpcd -wA $iface
