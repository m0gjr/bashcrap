#!/bin/bash -e

pull_full(){
	size=$(ssh $shost "zfs send -nv $sds@$src" | tee /dev/fd/2 | tail -n1 | cut -d' ' -f5 | sed 's/\.[0-9]*//')
	ssh $shost "zfs send $sds@$src" | pv -cs $size | ssh $dhost "zfs receive $dds $1"
}

pull_inc(){
	size=$(ssh $shost "zfs send -nvi $sds@$src" | tee /dev/fd/2 | tail -n1 | cut -d' ' -f5 | sed 's/\.[0-9]*//')
	ssh $shost "zfs send -i $sds@$dst $sds@$src" | pv -cs $size | ssh $dhost "zfs receive $dds"
}

homeds=$(zfs mount | awk '$2 == "/home" {print $1}')

if [ "$(basename "$0")" = "zfspull" ]
then
	echo pull
	shost="${shost:-server}"
	dhost="${dhost:-localhost}"
	sds="${sds:-jumbo/home}"
	dds="${dds:-$homeds}"
else
	echo push
	shost="${shost:-localhost}"
	dhost="${dhost:-server}"
	sds="${sds:-$homeds}"
	dds="${dds:-jumbo/home}"
fi

src=$(ssh $shost zfs list -t snapshot -Ho name $sds | tail -n1 | cut -d'@' -f2)
dst=$(ssh $dhost zfs list -t snapshot -Ho name $dds | tail -n1 | cut -d'@' -f2)

if [ -z $dst ]
then
	pull_full
else
	if ! pull_inc
	then
		echo rolling back $dhost to $dds@$dst
		echo enter to proceed
		read
		ssh $dhost "zfs rollback $dds@$dst"
		pull_inc
	fi
fi
