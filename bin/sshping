#!/bin/bash

dir=$(mktemp -d /tmp/sshping.XXXX)
fifo=$dir/fifo
mkfifo $fifo
trap "rm -f $fifo; rmdir $dir; exit 0" SIGINT SIGTERM

sshpinger(){
	maxtime=0
	avetime=0
	for i in 1 2 3
	do
		echo starttest
		until $(read)
		do
			:
		done
	done

	while true
	do
		echo
		starttime=$(date +%s%N)

		until $(read)
		do
			:
		done

		endtime=$(date +%s%N)
		time=$(expr $(expr $endtime - $starttime) / 1000000)

		if [ "$time" -gt "$maxtime" ] 
		then
			maxtime=$time
		fi

		avetime=$(echo $avetime*0.9+0.1*$time | /usr/bin/bc)

		printf "$maxtime\t$avetime\t$time\n" 1>&2


		sleep 0.2
	done
}
< $fifo sshpinger | ssh "$@" "cat" > $fifo
