#!/bin/bash

string=''


function pass {

	string=""

	while [ ${#string} -eq 0 ]
	do
		string+=$(/bin/dd if=/dev/urandom bs=1 count=1 2>/dev/null | tr -dc 'A-Z')
	done

	while [ ${#string} -le $1 ]
	do
		string+=$(/bin/dd if=/dev/urandom bs=1 count=1 2>/dev/null | tr -dc 'a-z')
	done

	string+="1"

	echo $string
}

if [ -z "$1" ]
then
	pass 5
	pass 10
	pass 15
	pass 20
else
	pass $1
fi
