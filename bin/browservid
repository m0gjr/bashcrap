#!/bin/bash

url="$(xdotool getwindowname $(xdotool getwindowfocus) | tr ' ' '\n' | grep 'https://' | head -n1)"

echo "$url"

xterm -e 'sudo -u browser mpv --ytdl-format="best[height<=720]/bestvideo[height<=720]+bestaudio/best" "'"$url"'" || sudo -u browser mpv --ytdl-format="bestvideo[height<=720]+bestaudio/best" "'"$url"'"'
