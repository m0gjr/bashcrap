#!/bin/bash

url="$(xdotool getwindowname $(xdotool getwindowfocus) | rev | cut -d'-' -f2- | cut -d' ' -f2 | rev)"

echo "$url"

xterm -iconic -e 'sudo -u browser mpv --ytdl-format="best[height<=720]/bestvideo[height<=720]+bestaudio/best" "'"$url"'" || sudo -u browser mpv --ytdl-format="bestvideo[height<=720]+bestaudio/best" "'"$url"'"'
