#!/bin/bash

dir=$(mktemp -d /tmp/ytdl-term.XXXX)
fifo=$dir/fifo
mkfifo $fifo
trap "rm -f $fifo; rmdir $dir; exit 0" SIGPIPE

x-terminal-emulator-float awk '/^ERROR:/ {gsub(/^/,"\033[0;30;47m",$0) gsub(/$/,"\033[0m")} 1 ' $fifo&

if yt-dlp --verbose "$@"
then
	printf %b '\e]11;#00ff00\a\n' >&2
	sleep 0.1
else
	printf %b '\e]11;#ff0000\a\n' >&2
	sleep 2.5
fi 2> $fifo

rm $fifo
rmdir $dir
