#!/usr/bin/env python3

import os
import json
import sys
import re

import i3_windows

ws_num=i3_windows.get_workspace()
tree=i3_windows.get_tree()
active_node=i3_windows.get_active_node(tree['nodes'],ws_num)
focused_node=i3_windows.get_focused_node(active_node['floating_nodes'])

if focused_node.get('name') == "" and focused_node.get('app_id') == "com.github.maoschanz.drawing" and focused_node.get('geometry').get('width') == 626 and focused_node.get('geometry').get('height') == 113:
	os.popen("i3-msg kill")
