#!/usr/bin/env python3

import os
import json
import sys

import i3_windows

ws_num=i3_windows.get_workspace()

if sys.argv[1] == 'right':
	ws = ws_num + 1
	if len(sys.argv) > 2 and sys.argv[2] == 'move':
		os.popen('i3-msg move container to workspace ' + str(ws))
	os.popen('i3-msg workspace ' + str(ws))
elif sys.argv[1] == 'left':
	ws = ws_num - 1
	if len(sys.argv) > 2 and sys.argv[2] == 'move':
		os.popen('i3-msg move container to workspace ' + str(ws))
	os.popen('i3-msg workspace ' + str(ws))

